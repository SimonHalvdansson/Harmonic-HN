    </LinearLayout>

    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/commentDividerColor"/>

    <com.google.android.material.loadingindicator.LoadingIndicator
        android:id="@+id/comments_header_loading"
        android:indeterminate="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="52dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        android:id="@+id/comments_header_refresh"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans"
        style="@style/Widget.Material3Expressive.Button.ElevatedButton"
        app:icon="@drawable/ic_action_refresh"
        android:textColor="?attr/colorOnSecondary"
        app:iconTint="?attr/colorOnSecondary"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Tap to refresh"    />

    <LinearLayout
        android:id="@+id/comments_header_loading_failed"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="44dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/comments_header_loading_failed_text"
            android:gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="6dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:fontFamily="@font/product_sans"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/storyColorNormal"
            android:text="Loading failed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"    />

        <TextView
            android:id="@+id/comments_header_server_error"
            android:visibility="gone"
            android:paddingBottom="6dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:paddingTop="6dp"
            android:fontFamily="@font/product_sans"
            android:textSize="17sp"
            android:textColor="?attr/storyColorNormal"
            android:text="API Server error: This is most likely due to the Algolia Hacker News API which Harmonic uses being down. Historically, outages for the Algolia API are limited to a few hours but they can last longer."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"    />

        <com.google.android.material.button.MaterialButton
            android:fontFamily="@font/product_sans_bold"
            android:id="@+id/comments_header_retry"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            style="@style/Widget.Material3Expressive.Button.ElevatedButton"
            app:icon="@drawable/ic_action_refresh"
            android:textColor="?attr/colorOnSecondary"
            app:iconTint="?attr/colorOnSecondary"
            android:backgroundTint="?attr/colorSecondary"
            android:text="Retry"    />

        <Button
            android:fontFamily="@font/product_sans_bold"
            android:id="@+id/comments_header_open_in_browser"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            style="@style/Widget.Material3.Button.ElevatedButton"
            app:icon="@drawable/ic_action_external_browser"
            android:textColor="?attr/colorOnSecondary"
            app:iconTint="?attr/colorOnSecondary"
            android:backgroundTint="?attr/colorSecondary"
            android:text="Open in browser"    />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/comments_header_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/ic_action_comment"
            android:layout_width="match_parent"
            android:layout_height="48dp"    />

        <TextView
            android:id="@+id/comments_header_empty_text"
            android:visibility="visible"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="36dp"
            android:fontFamily="@font/product_sans"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/storyColorNormal"
            tools:text="No comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"    />

    </LinearLayout>

</LinearLayout>
