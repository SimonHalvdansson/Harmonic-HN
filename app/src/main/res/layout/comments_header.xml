<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comment_sheet_container"
    tools:context=".CommentsActivity"
    tools:background="@color/background"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <Space
        android:id="@+id/comments_header_spacer"
        android:layout_height="0dp"
        android:layout_width="match_parent"/>

    <ImageView
        android:id="@+id/comments_sheet_handle"
        android:src="@drawable/bottom_sheet_grapple"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_width="80dp"
        android:layout_height="5dp"/>

    <LinearLayout
        android:id="@+id/comment_sheet_buttons_container"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/comments_sheet_layout_refresh"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="60dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_action_refresh"
                    android:layout_width="27dp"
                    android:layout_height="27dp"/>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comments_sheet_container_expand"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/comments_sheet_layout_expand"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="60dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_action_arrow_up"
                    android:layout_width="27dp"
                    android:layout_height="27dp"/>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comments_sheet_container_browser"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/comments_sheet_layout_browser"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="60dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_action_web"
                    android:layout_width="27dp"
                    android:layout_height="27dp"/>

            </RelativeLayout>
        </RelativeLayout>


