<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/comments_header_nitter_container"
    android:layout_width="match_parent"
    android:visibility="gone"
    tools:visibility="visible"
    tools:layout_marginTop="100dp"
    android:layout_height="wrap_content">

    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/comments_header_nitter_text"
        android:textColor="?attr/storyColorNormal"
        android:textSize="15sp"
        tools:text="This is a tweet"
        android:textIsSelectable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:fontFamily="@font/product_sans" />
    <ImageView
        android:background="@drawable/rounded_corners"
        android:visibility="gone"
        android:clipToOutline="true"
        android:id="@+id/comments_header_nitter_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="Tweet image"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_action_date"
                    android:layout_width="14dp"
                    android:layout_height="16dp"/>

                <TextView
                    android:id="@+id/comments_header_nitter_date"
                    android:fontFamily="@font/product_sans"
                    android:paddingLeft="2dp"
                    android:paddingRight="8dp"
                    android:text="Nov 3"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/comments_header_nitter_reply_image"
                    android:src="@drawable/ic_action_reply"
                    android:layout_width="15dp"
                    android:layout_height="16dp"/>

                <TextView
                    android:id="@+id/comments_header_nitter_reply_count"
                    android:fontFamily="@font/product_sans"
                    android:paddingLeft="1dp"
                    android:paddingRight="7dp"
                    android:text="12"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/comments_header_nitter_reposts_image"
                    android:src="@drawable/ic_action_retweet"
                    android:layout_width="15dp"
                    android:layout_height="16dp"/>

                <TextView
                    android:id="@+id/comments_header_nitter_reposts"
                    android:fontFamily="@font/product_sans"
                    android:paddingLeft="1dp"
                    android:paddingRight="8dp"
                    android:text="3,709"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/comments_header_nitter_likes_image"
                    android:src="@drawable/ic_action_thumbs_up"
                    android:layout_width="12dp"
                    android:layout_height="16dp"/>

                <TextView
                    android:id="@+id/comments_header_nitter_likes"
                    android:fontFamily="@font/product_sans"
                    android:paddingLeft="2dp"
                    android:paddingRight="4dp"
                    android:text="4,651"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/comments_header_nitter_button_open"
            android:fontFamily="@font/product_sans_bold"
            app:icon="@drawable/ic_link_preview_x"
            android:textSize="14sp"
            android:textColor="#eee"
            app:backgroundTint="#000"
            android:elevation="4dp"
            android:text="Open in app"
            style="@style/Widget.Material3Expressive.Button.IconButton.Filled"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            app:iconPadding="20dp"
            android:layout_height="56dp"/>

    </LinearLayout>


</LinearLayout>